<table id="tbl_2017" class="table table-dark table__points">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Points For</th>
          <th scope="col">Points Against</th>
          <th scope="col">Difference</th>
        </tr>
      </thead>
      <tbody>
      {{#each points}}
          {{#equal year 2017}}
              <tr>
                  <td><img class="user user-sm" src="/images/{{name}}_thumb.png" alt="{{name}}"> {{name}}</td>
                  <td>{{pointsFor}}</td>
                  <td>{{pointsAgainst}}</td>
                  <td>{{difference}}</td>
              </tr>
          {{/equal}}
      {{/each}}
      </tbody>
</table>
