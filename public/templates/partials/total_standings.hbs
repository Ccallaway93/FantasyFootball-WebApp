
<table id="tbl_StandingsTotal" class="table table-dark table__standing">
  <thead>
    <tr>
      <th scope="col">Rank</th>
      <th scope="col">Name</th>
      <th scope="col">Wins</th>
      <th scope="col">Losses</th>
      <th scope="col">Win PCT</th>
      <th scope="col">Moves</th>
      <th style="width: 10%;" scope="col">Championships</th>
      <th style="width: 10%;" scope="col">Average Finish</th>
    </tr>
  </thead>
  <tbody>
  {{#each this}}
    {{#equal years 3}}
          <tr>
              <td id="rank"></td>
              <td><img class="user user-sm" src="/images/{{name}}_thumb.png" alt="{{name}}">{{name}}</td>
              <td>{{wins}}</td>
              <td>{{losses}}</td>
              <td>{{percentage}}%</td>
              <td>{{moves}}</td>
              <td style="width: 10%;">{{championships}}</td>
              <td style="width: 10%;">{{averageFinish}}</td>
          </tr>
    {{/equal}}
  {{/each}}
  </tbody>
</table>