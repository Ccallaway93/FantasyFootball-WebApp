                    "info": false,
                    "columns": [
                        {"orderable": false},
                        null
                    ],
                    "order": [[1, "desc"]]
                });
            });


            $('.dropdown-item').click(function(event){

                 var button = this.id;
                 
                 $('#btn_points').text(button)
                 //$('button').addClass('btn-secondary')
                 //$('#'+button).removeClass('btn-secondary active')
                 //$('#'+button).addClass('btn-primary active')
                 //$('#'+button).addClass('.active')

                 moveToNextSection(event, this.id);

            })
               


            function moveToNextSection(event, year){
                event.preventDefault();
                //var currentTableId = $('#content').find('table').attr('id');
                //console.log('current table ' +currentTableId)
                console.log(year);

                $('#card_points').find('table').addClass('d-none');
                $('#tbl_' +year).removeClass('d-none d-none')
            }

        </script>


</body>
</html>