<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pocket Jobs - History</title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Raleway:100,300,500,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Baloo+Chettan+2:wght@500&family=Inconsolata:wght@900&family=Pangolin&family=Luckiest+Guy&family=Rokkitt:wght@500&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.css"/>
        <link rel="stylesheet" href="/css/app.css">
</head>
<body>

<div class="wrapper">
        {{>sidebar}}
        <div id="content">
            <section>
                <div id="header" class="py-2 px-5 container-fluid">
                    <h1 class="display-4">STANDINGS</h1>
                    <p class="lead d-none d-sm-block">The complete standings for every year.</p>                  
                </div>
            </section>
            <div class="row">
                <div class="col-lg-12">
                    <div id="card_standings" class="shadow card bg-dark card__history">
                        <div class="card-header">
                        <h3>REGULAR SEASON STANDINGS</h3>
                        <div class="p-1">
                            <div class="btn-group btn-standings" role="group" aria-label="Basic example">
                                <button id="2017" type="button" class="btn btn-info">2017</button>
                                <button id="2018" type="button" class="btn btn-info">2018</button>
                                <button id="2019" type="button" class="btn btn-info">2019</button>
                                <button id="Total" type="button" class="btn btn-primary active">Total</button>
                            </div>
                        </div>
                        </div>
                        {{>total_standings}}
                        {{>2017_standings}}
                        {{>2018_standings}}
                        {{>2019_standings}}
                    </div>
                </div>
            </div>
        </div>
</div>


































        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
        <script src="bootstrap/dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.js"></script>

        <script>

            $(document).ready(function() {
                $('#tbl_StandingsTotal').DataTable( {
                    "paging":   false,
                    "info":     false,
                    "searching": false,
                    "columns": [
                        {"orderable": false},
                        {"orderable": false},
                        null,
                        null,
                        null,
                        null,
                        null,
                        null
                    ],
                    "order": [[2, "desc"]]
                } );

                $('#tbl_Standings2017').DataTable( {
                    "paging":   false,
                    "info":     false,
                    "searching": false,
                      "columns": [
                        null,
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                    ],
                    "order": [[0, "asc"]]
                } );

                $('#tbl_Standings2018').DataTable( {
                    "paging":   false,
                    "info":     false,
                    "searching": false,
                      "columns": [
                        null,
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                    ],
                    "order": [[0, "asc"]]
                });

                $('#tbl_Standings2019').DataTable( {
                    "paging":   false,
                    "info":     false,
                    "searching": false,
                      "columns": [
                        null,
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                        {"orderable": false},
                    ],
                    "order": [[0, "asc"]]
                });
            });

                $(function () {
                    $('#tbl_StandingsTotal tbody tr').each(function (idx) {
                    $(this).children("td:eq(0)").html(idx + 1);
                    });
                });


                $('button').click(function(event){

                 var button = this.id;
                 
                 $('button').addClass('btn-info')
                 $('#'+button).removeClass('btn-info active')
                 $('#'+button).addClass('btn-primary active')
                 //$('#'+button).addClass('.active')

                 moveToNextSection(event, this.id);

            })
               


            function moveToNextSection(event, year){
                event.preventDefault();
                //var currentTableId = $('#content').find('table').attr('id');
                //console.log('current table ' +currentTableId)
                console.log(year);

                $('.table').addClass('d-none');
                $('#tbl_Standings'+year).removeClass('d-none d-none')
            }



        </script>


</body>
</html>