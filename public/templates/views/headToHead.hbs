        <link rel="stylesheet" href="/css/app.css">
</head>
<body>
<div class="wrapper">
        {{>sidebar}}
        <div id="content">
            <section>
                <div id="header" class="py-2 px-5 container-fluid">
                    <h1 class="display-4">Head To Head</h1>
                    <p class="lead d-none d-sm-block">The accumulation of all Head-To-Head regular season matchups from the year 2018 and beyond.</p>                  
                </div>
            </section>
        <div class="container mb-4">
            <div class="row m-2">
                <div class="col-md-6 p-3">
                    <div class="card text-white bg-dark shadow">
                        <div class="card-body">
                            <h2 id="leftTeamName" class="display-4 card-title text-primary text-center">TEAM 1</h2>
                            <div class="dropdown text-center">
                                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    TEAM
                                </button>
                                <div id="left" class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    <button id="1" class="dropdown-item" type="button">Kevin</button>
                                    <button id="2" class="dropdown-item" type="button">Duncan</button>
                                    <button id="3" class="dropdown-item" type="button">Matt</button>
                                    <button id="4" class="dropdown-item" type="button">Nick</button>
                                    <button id="5" class="dropdown-item" type="button">Conner</button>
                                    <button id="6" class="dropdown-item" type="button">Morgan</button>
                                    <button id="7" class="dropdown-item" type="button">Seth</button>
                                    <button id="8" class="dropdown-item" type="button">Erik</button>
                                </div>
                            </div>
                            <h1 id="leftWins" class="display-1 text-center">0</h1>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 p-3">
                    <div class="card text-white bg-dark shadow">
                        <div class="card-body">
                            <h2 id="rightTeamName" class="display-4 card-title text-primary text-center">TEAM 2</h2>
                            <div class="dropdown text-center">
                                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    TEAM
                                </button>
                                <div id="right" class="dropdown-menu" aria-labelledby="dropdownMenu3">
                                    <button id="1" class="dropdown-item" type="button">Kevin</button>
                                    <button id="2" class="dropdown-item" type="button">Duncan</button>
                                    <button id="3" class="dropdown-item" type="button">Matt</button>
                                    <button id="4" class="dropdown-item" type="button">Nick</button>
                                    <button id="5" class="dropdown-item" type="button">Conner</button>
                                    <button id="6" class="dropdown-item" type="button">Morgan</button>
                                    <button id="7" class="dropdown-item" type="button">Seth</button>
                                    <button id="8" class="dropdown-item" type="button">Erik</button>
                                </div>
                            </div>
                            <h1 id="rightWins" class="display-1 text-center">0</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <table id="tbl_h2h" class="table table-striped table-dark text-center shadow">
                    <thead>
                        <tr>
                        <td style="width: 30%;" id="leftHostScore" scope="col"></td>
                        <th style="width: 40%;" scope="col">Total Points</th>
                        <td style="width: 30%;" id="rightHostScore" scope="col"></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="width: 30%;" id="leftMVP"></td>
                            <th style="width: 40%;" scope="col">Starting MVP</th>
                            <td style="width: 30%;" id="rightMVP"></td>
                        </tr>
                        <tr>
                            <td style="width: 30%;" id="leftBenchMVP"></td>
                            <th style="width: 40%;" scope="col">Bench MVP</th>
                            <td style="width: 30%;" id="rightBenchMVP"></td>
                        </tr>
                        <tr>
                            <td style="width: 30%;" id="leftLowestWinMargin"></td>
                            <th style="width: 40%;" scope="col">Lowest Margin</th>
                            <td style="width: 30%;" id="rightLowestWinMargin"></td>
                        </tr>
                        <tr>
                            <td style="width: 30%;" id="leftHighestWinMargin"></td>
                            <th style="width: 40%;" scope="col">Highest Margin</th>
                            <td style="width: 30%;" id="rightHighestWinMargin"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>




